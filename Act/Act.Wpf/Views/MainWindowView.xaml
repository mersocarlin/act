<Window x:Class="Act.Wpf.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Button Content="Add" Height="50" Width="50" Click="AddItem_Click" />
            </StackPanel>
            <TextBlock Text="{Binding ActList}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
